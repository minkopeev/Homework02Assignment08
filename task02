 public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.println("Please input first number:");

        int num1 = sc.nextInt();

        System.out.println("Please input second number:");

        int num2 = sc.nextInt();

        System.out.println("The sum of the numbers is: " + (num1 + num2));

        System.out.println("The difference of first number minus second number is: " + (num1 - num2));

        System.out.println("The difference of second number minus first number is: " + (num2 - num1));

        System.out.println("The multiplication of the numbers is: " + (num1 * num2));

        if (num1 >= num2) {

            System.out.println("The reminder after division of the greater numbers is: " + (num1 % num2));

        } else {

            System.out.println("The reminder after division of the greater numbers is: " + (num2 % num1));
        }

        System.out.println("The division of first number to the second number is: " + (num1 / num2));

        System.out.println("The division of second number to the first number is: " + (num2 / num1));


    }

import java.util.Scanner;

public class Homework02Task06 {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.println("Please enter number:");

        int num = sc.nextInt();

        int sum = 0;

        for (int i = 1; i <= num; i++) {

            sum += i;

        }

        System.out.println("The amount of the numbers from 1 to " + num + " is: " + sum);
    }
}
